<body>
  <div id="app">
    <h1>ğŸ¶ Dog of the Day</h1>
    <!-- æ•…æ„ä¸å†™ altï¼Œç ´åå¯è®¿é—®æ€§ -->
    <img :src="dogUrl" />
    <!-- è¶…é•¿å•è¡Œæ–‡å­—ï¼Œå¢åŠ è®¤çŸ¥è´Ÿè· -->
    <p>{{ description }}</p>
    <!-- æå°æŒ‰é’®ï¼Œå¢åŠ è¿åŠ¨è´Ÿè· -->
    <button @click="getDog"></button>
  </div>

  <script>
    const { createApp } = Vue;
    createApp({
      data(){return{
        dogUrl:'',
        description:'This is the most adorable dog you have ever seen in your life!!! Click the tiny button above to see another one right away!!!'
      }},
      mounted(){this.getDog();},
      methods:{
        async getDog(){
          const res = await fetch('https://dog.ceo/api/breeds/image/random');
          const { message } = await res.json();
          this.dogUrl = message;
        }
      }
    }).mount('#app');
  </script>
</body>
</html>
